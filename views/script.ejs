<script>
  hideloader();
  function success(title, text) {
    swal({
      title: title,
      text: text,
      icon: "success",
    });
  }
  function warning(title, text) {
    swal({
      title: title,
      text: text,
      icon: "warning",
    });
  }
  function info(title, text) {
    swal({
      title: title,
      text: text,
      icon: "info",
    });
  }
  function errormsg(err) {
    swal({
      title: "Error!",
      text: err,
      icon: "error",
    });
  }

  function showloader() {
    console.log("show loader");
    $(".loader-wrapper").show();
  }

  function hideloader() {
    console.log("hide loader");
    setTimeout(() => {
      $(".loader-wrapper").hide();
    }, 1000);
  }

  $(document).on("click", "#logoutBtn", function () {
    $.ajax({
      type: "POST",
      url: "/login/logout",
      success: function (result) {
        console.log(result);
        if (result.msg == "success") {
          success("Logout", "Logout successfully...");
          location.replace("/");
        } else {
          error("ID & Password not match...");
        }
      },
      error: function (result) {
        error(result.msg);
      },
    });
  });
</script>
